<!-- Register Staff Page - Tailwind UI -->

<div class="flex items-center justify-center gap-2 mb-6">
    <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center">
        <i class="fa-solid fa-user-plus text-primary-600"></i>
    </div>
</div>

<h2 class="text-2xl font-bold text-stone-900 text-center mb-1">Đăng ký nhân viên</h2>
<p class="text-stone-500 text-center mb-8">Tham gia vào đội ngũ nhà hàng</p>

<form id="registerStaffForm">
    <div class="space-y-4">
        <!-- Restaurant Code -->
        <div class="form-group">
            <label for="restaurantCode" class="form-label">
                Mã nhà hàng <span class="text-red-500">*</span>
            </label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fa-solid fa-key text-stone-400"></i>
                </div>
                <input type="text" class="form-input pl-10 font-mono" id="restaurantCode" name="restaurantCode" 
                       placeholder="Nhập mã invite code" required>
            </div>
            <p class="text-xs text-stone-400 mt-1 flex items-center gap-1">
                <i class="fa-solid fa-circle-info"></i>
                Liên hệ quản lý nhà hàng để lấy mã này
            </p>
        </div>
        
        <!-- Full Name -->
        <div class="form-group">
            <label for="name" class="form-label">
                Họ và tên <span class="text-red-500">*</span>
            </label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fa-solid fa-user text-stone-400"></i>
                </div>
                <input type="text" class="form-input pl-10" id="name" name="name" 
                       placeholder="Nhập họ và tên" required>
            </div>
        </div>
        
        <!-- Email -->
        <div class="form-group">
            <label for="email" class="form-label">
                Email <span class="text-red-500">*</span>
            </label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fa-solid fa-envelope text-stone-400"></i>
                </div>
                <input type="email" class="form-input pl-10" id="email" name="email" 
                       placeholder="Nhập email" required>
            </div>
        </div>
        
        <!-- Password -->
        <div class="form-group">
            <label for="password" class="form-label">
                Mật khẩu <span class="text-red-500">*</span>
            </label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fa-solid fa-lock text-stone-400"></i>
                </div>
                <input type="password" class="form-input pl-10 pr-10" id="password" name="password" 
                       placeholder="Nhập mật khẩu" required minlength="6">
                <button type="button" onclick="togglePassword('password', 'staffEyeIcon1')" 
                        class="absolute inset-y-0 right-0 pr-3 flex items-center text-stone-400 hover:text-stone-600"
                        tabindex="-1">
                    <i class="fa-solid fa-eye" id="staffEyeIcon1"></i>
                </button>
            </div>
        </div>
        
        <!-- Confirm Password -->
        <div class="form-group">
            <label for="confirmPassword" class="form-label">
                Nhập lại mật khẩu <span class="text-red-500">*</span>
            </label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fa-solid fa-lock text-stone-400"></i>
                </div>
                <input type="password" class="form-input pl-10 pr-10" id="confirmPassword" name="confirmPassword" 
                       placeholder="Nhập lại mật khẩu" required>
                <button type="button" onclick="togglePassword('confirmPassword', 'staffEyeIcon2')" 
                        class="absolute inset-y-0 right-0 pr-3 flex items-center text-stone-400 hover:text-stone-600"
                        tabindex="-1">
                    <i class="fa-solid fa-eye" id="staffEyeIcon2"></i>
                </button>
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary w-full mt-6">
        <i class="fa-solid fa-paper-plane"></i>
        Gửi yêu cầu đăng ký
    </button>
    
    <!-- Success Alert (hidden by default) -->
    <div class="hidden mt-4 p-4 bg-green-50 border border-green-200 rounded-xl" id="registerSuccessAlert">
        <div class="flex gap-3">
            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                <i class="fa-solid fa-circle-check text-green-600"></i>
            </div>
            <div>
                <p class="font-medium text-green-800">Yêu cầu đã được gửi!</p>
                <p class="text-sm text-green-700 mt-1">Vui lòng chờ quản lý nhà hàng duyệt tài khoản của bạn.</p>
            </div>
        </div>
    </div>
</form>

<div class="mt-8 text-center">
    <a href="/login" data-nav="/login" class="inline-flex items-center gap-2 text-sm text-stone-500 hover:text-primary-600 transition-colors">
        <i class="fa-solid fa-arrow-left"></i>
        Quay lại đăng nhập
    </a>
</div>

<!-- Info Card -->
<div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-xl">
    <div class="flex gap-3">
        <i class="fa-solid fa-circle-info text-blue-600"></i>
        <div>
            <p class="text-sm font-medium text-blue-800">Quy trình đăng ký</p>
            <ul class="text-sm text-blue-700 mt-2 space-y-1">
                <li class="flex items-center gap-2">
                    <span class="w-5 h-5 rounded-full bg-blue-200 text-blue-700 flex items-center justify-center text-xs">1</span>
                    Điền thông tin và gửi yêu cầu
                </li>
                <li class="flex items-center gap-2">
                    <span class="w-5 h-5 rounded-full bg-blue-200 text-blue-700 flex items-center justify-center text-xs">2</span>
                    Quản lý nhà hàng duyệt tài khoản
                </li>
                <li class="flex items-center gap-2">
                    <span class="w-5 h-5 rounded-full bg-blue-200 text-blue-700 flex items-center justify-center text-xs">3</span>
                    Đăng nhập và bắt đầu làm việc
                </li>
            </ul>
        </div>
    </div>
</div>
