<!-- Tables Page - Tailwind UI -->

<!-- Page Header -->
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-stone-900">Quản lý bàn</h1>
        <p class="text-stone-500">Cấu hình bàn và sơ đồ nhà hàng</p>
    </div>
    <button class="btn btn-primary" data-action="addTable" onclick="openModal('tableFormModal')">
        <i class="fa-solid fa-plus"></i>
        Thêm bàn mới
    </button>
</div>

<!-- Tables Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    {{#each data}}
    <div class="card p-4 hover:shadow-card-hover transition-shadow animate-fade-in" style="animation-delay: {{@index}}0ms">
        <!-- Table Header -->
        <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-600">
                    <i class="fa-solid fa-utensils"></i>
                </div>
                <div>
                    <h4 class="font-semibold text-stone-900">{{name}}</h4>
                    <p class="text-sm text-stone-500">{{area}}</p>
                </div>
            </div>
            {{#if (eq status 'ACTIVE')}}
            <span class="w-3 h-3 bg-green-500 rounded-full" title="Hoạt động"></span>
            {{else}}
            <span class="w-3 h-3 bg-stone-300 rounded-full" title="Tạm ngưng"></span>
            {{/if}}
        </div>
        
        <!-- Table Info -->
        <div class="flex items-center gap-4 mb-4 text-sm">
            <div class="flex items-center gap-1 text-stone-600">
                <i class="fa-solid fa-users"></i>
                <span>{{capacity}} người</span>
            </div>
            {{#if viewNote}}
            <div class="flex items-center gap-1 text-stone-600">
                <i class="fa-solid fa-eye"></i>
                <span>{{viewNote}}</span>
            </div>
            {{/if}}
        </div>
        
        <!-- View Image -->
        {{#if view_image_url}}
        <div class="mb-4 rounded-lg overflow-hidden">
            <img src="{{view_image_url}}" alt="View" class="w-full h-24 object-cover">
        </div>
        {{/if}}
        
        <!-- Status Badge -->
        <div class="flex items-center justify-between">
            {{#if (eq status 'ACTIVE')}}
            <span class="badge badge-confirmed">Hoạt động</span>
            {{else}}
            <span class="badge badge-no-show">Tạm ngưng</span>
            {{/if}}
            
            <!-- Actions -->
            <div class="flex items-center gap-1">
                <button class="btn btn-icon btn-secondary" 
                        data-action="edit-table" data-table-id="{{id}}" data-table='{{json this}}'
                        title="Sửa">
                    <i class="fa-solid fa-pencil"></i>
                </button>
                <button class="btn btn-icon btn-outline text-red-500 hover:bg-red-50" 
                        data-action="delete-table" data-table-id="{{id}}"
                        title="Xoá">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </div>
        </div>
    </div>
    {{else}}
    <!-- Empty State -->
    <div class="col-span-full">
        <div class="empty-state py-12">
            <i class="fa-solid fa-table-cells"></i>
            <p class="text-stone-500 mb-4">Chưa có bàn nào. Hãy thêm bàn mới!</p>
            <button class="btn btn-primary" data-action="addTable" onclick="openModal('tableFormModal')">
                <i class="fa-solid fa-plus"></i>
                Thêm bàn đầu tiên
            </button>
        </div>
    </div>
    {{/each}}
</div>

<!-- Pagination -->
{{#if pagination}}
<div class="flex justify-between items-center mt-4 bg-white p-4 rounded-lg shadow-card border border-gray-200">
    <div class="text-sm text-stone-500">
        Hiển thị {{pagination.from}}-{{pagination.to}} trong số {{pagination.total}} bàn
    </div>
    <div class="flex gap-2 items-center">
        <button class="btn btn-outline px-4 py-2 {{#unless pagination.hasPrev}}opacity-50 cursor-not-allowed{{/unless}}" 
                {{#if pagination.hasPrev}}onclick="changePage({{subtract pagination.currentPage 1}})"{{else}}disabled{{/if}}>
            <i class="fa-solid fa-chevron-left"></i>
        </button>
        
        <span class="text-sm text-stone-600 font-medium px-2">{{pagination.currentPage}} / {{pagination.totalPages}}</span>
        
        <button class="btn btn-outline px-4 py-2 {{#unless pagination.hasNext}}opacity-50 cursor-not-allowed{{/unless}}"
                {{#if pagination.hasNext}}onclick="changePage({{add pagination.currentPage 1}})"{{else}}disabled{{/if}}>
            <i class="fa-solid fa-chevron-right"></i>
        </button>
    </div>
</div>
{{/if}}

<!-- Table Form Modal -->
<div id="tableFormModal" class="hidden">
    <div class="modal-backdrop show" onclick="closeModal('tableFormModal')"></div>
    <div class="modal">
        <div class="modal-header">
            <h5 class="modal-title" id="tableFormTitle">Thêm bàn mới</h5>
            <button class="modal-close" onclick="closeModal('tableFormModal')">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
        <form id="tableForm">
            <div class="modal-body">
                <input type="hidden" id="tableId" name="id">
                
                <div class="form-group">
                    <label for="tableName" class="form-label">
                        Tên bàn <span class="text-red-500">*</span>
                    </label>
                    <input type="text" class="form-input" id="tableName" name="name" 
                           placeholder="VD: Bàn 1, Bàn VIP..." required>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div class="form-group">
                        <label for="tableCapacity" class="form-label">
                            Sức chứa <span class="text-red-500">*</span>
                        </label>
                        <input type="number" class="form-input" id="tableCapacity" name="capacity" 
                               placeholder="Số người" min="1" required>
                    </div>
                    <div class="form-group">
                        <label for="tableArea" class="form-label">Khu vực</label>
                        <input type="text" class="form-input" id="tableArea" name="area" 
                               placeholder="VD: Tầng 1, Sân vườn...">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="tableStatus" class="form-label">Trạng thái</label>
                    <select class="form-input form-select" id="tableStatus" name="status">
                        <option value="ACTIVE">Hoạt động</option>
                        <option value="INACTIVE">Tạm ngưng</option>
                    </select>
                </div>
                
                <hr class="my-4 border-stone-200">
                
                <div class="form-group">
                    <label for="tableViewImage" class="form-label">Ảnh view bàn</label>
                    <div class="border-2 border-dashed border-stone-300 rounded-lg p-6 text-center hover:border-primary-400 transition-colors cursor-pointer">
                        <i class="fa-solid fa-upload"></i>
                        <p class="text-sm text-stone-500">Click để chọn ảnh</p>
                        <input type="file" class="hidden" id="tableViewImage" name="viewImage" accept="image/*">
                    </div>
                    <div id="viewImagePreview" class="mt-2"></div>
                </div>
                
                <div class="form-group">
                    <label for="viewDescription" class="form-label">Mô tả view</label>
                    <textarea class="form-input" id="viewDescription" name="viewDescription" 
                              rows="2" placeholder="Mô tả view từ bàn này..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('tableFormModal')">Huỷ</button>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        </form>
    </div>
</div>


