<!-- Reviews Page - Tailwind UI -->

<!-- Page Header -->
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-stone-900">Đánh giá</h1>
        <p class="text-stone-500">Xem và quản lý đánh giá từ khách hàng</p>
    </div>
    <span class="px-3 py-1 bg-yellow-100 text-yellow-700 rounded-full text-sm font-medium">
        {{total}} đánh giá
    </span>
</div>

<!-- Filters -->
<div class="card p-4 mb-6">
    <form id="reviewFilterForm" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4">
        <div class="form-group mb-0 lg:col-span-1">
            <label for="ratingFilter" class="form-label">Số sao</label>
            <select class="form-input form-select" id="ratingFilter" name="rating">
                <option value="">Tất cả</option>
                <option value="5">⭐⭐⭐⭐⭐ 5 sao</option>
                <option value="4">⭐⭐⭐⭐ 4 sao</option>
                <option value="3">⭐⭐⭐ 3 sao</option>
                <option value="2">⭐⭐ 2 sao</option>
                <option value="1">⭐ 1 sao</option>
            </select>
        </div>
        <div class="form-group mb-0 lg:col-span-1">
            <label for="statusFilter" class="form-label">Trạng thái</label>
            <select class="form-input form-select" id="statusFilter" name="status">
                <option value="">Tất cả</option>
                <option value="visible">Đang hiển thị</option>
                <option value="hidden">Đã ẩn</option>
            </select>
        </div>
        <div class="form-group mb-0 lg:col-span-1">
            <label for="fromDate" class="form-label">Từ ngày</label>
            <input type="date" class="form-input" id="fromDate" name="from_time">
        </div>
        <div class="form-group mb-0 lg:col-span-1">
            <label for="toDate" class="form-label">Đến ngày</label>
            <input type="date" class="form-input" id="toDate" name="to_time">
        </div>
        <div class="form-group mb-0 lg:col-span-2 flex items-end">
            <button type="submit" class="btn btn-primary w-full md:w-auto">
                <i class="fa-solid fa-filter"></i>
                Lọc
            </button>
        </div>
    </form>
</div>

<!-- Reviews List -->
<div class="space-y-4">
    {{#each data}}
    <div class="card p-5 {{#unless isVisible}}opacity-60{{/unless}} animate-fade-in" style="animation-delay: {{@index}}0ms">
        <div class="flex items-start gap-4">
            <!-- Avatar -->
            <img src="{{#if customerAvatar}}{{customerAvatar}}{{else}}https://i.pravatar.cc/50?img={{@index}}{{/if}}" 
                 alt="{{customerName}}" 
                 class="w-12 h-12 rounded-full object-cover">
            
            <div class="flex-1 min-w-0">
                <!-- Header -->
                <div class="flex items-start justify-between gap-4 mb-2">
                    <div>
                        <h4 class="font-semibold text-stone-900">{{customerName}}</h4>
                        <div class="flex items-center gap-2 mt-1">
                            <!-- Stars -->
                            <div class="flex gap-0.5 text-yellow-400">
                                {{#times rating}}
                                <i class="fa-solid fa-star"></i>
                                {{/times}}
                                {{#times (subtract 5 rating)}}
                                <i class="fa-regular fa-star text-stone-300"></i>
                                {{/times}}
                            </div>
                            <span class="text-sm text-stone-500">{{formatDate createdAt}}</span>
                        </div>
                    </div>
                    
                    <!-- Status & Actions -->
                    <div class="flex items-center gap-2">
                        {{#if isVisible}}
                        <span class="badge badge-confirmed">Đang hiển thị</span>
                        {{else}}
                        <span class="badge badge-no-show">Đã ẩn</span>
                        {{/if}}
                        
                        {{#if isVisible}}
                        <button class="btn btn-icon btn-secondary" 
                                data-action="hideReview" data-id="{{id}}"
                                title="Ẩn đánh giá">
                            <i class="fa-solid fa-eye-slash"></i>
                        </button>
                        {{else}}
                        <button class="btn btn-icon btn-secondary" 
                                data-action="showReview" data-id="{{id}}"
                                title="Hiện đánh giá">
                            <i class="fa-solid fa-eye"></i>
                        </button>
                        {{/if}}
                    </div>
                </div>
                
                <!-- Content -->
                <p class="text-stone-600 mb-3">{{content}}</p>
                
                <!-- Owner Reply -->
                {{#if ownerReply}}
                <div class="bg-primary-50 border-l-4 border-primary-400 p-3 rounded-r-lg">
                    <p class="text-sm font-medium text-primary-700 mb-1">Phản hồi từ nhà hàng:</p>
                    <p class="text-sm text-stone-600">{{ownerReply}}</p>
                </div>
                {{else}}
                <div class="reply-section">
                    <button class="btn btn-sm btn-outline text-primary-600" 
                            data-action="replyReview" data-id="{{id}}">
                        <i class="fa-solid fa-comment"></i>
                        Phản hồi
                    </button>
                    <form class="reply-form mt-3 p-3 bg-stone-50 rounded-lg hidden" 
                          data-review-id="{{id}}">
                        <textarea class="form-input w-full" rows="3" 
                                  placeholder="Nhập phản hồi của bạn..." required></textarea>
                        <div class="flex gap-2 mt-2 justify-end">
                            <button type="button" class="btn btn-sm btn-secondary" 
                                    data-action="cancelReply" data-id="{{id}}">Hủy</button>
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="fa-solid fa-paper-plane"></i> Gửi
                            </button>
                        </div>
                    </form>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="empty-state py-12">
        <i class="fa-solid fa-star"></i>
        <p class="text-stone-500">Chưa có đánh giá nào</p>
    </div>
    {{/each}}
</div>

<!-- Pagination -->
<div class="flex justify-between items-center mt-6">
    <div class="text-sm text-stone-500">
        Hiển thị {{pagination.from}}-{{pagination.to}} trong số {{pagination.total}} đánh giá
    </div>
    <div class="flex gap-2 items-center">
        <button class="btn btn-outline px-4 py-2 {{#unless pagination.hasPrev}}opacity-50 cursor-not-allowed{{/unless}}" 
                {{#if pagination.hasPrev}}onclick="changePage({{subtract pagination.currentPage 1}})"{{else}}disabled{{/if}}>
            <i class="fa-solid fa-chevron-left"></i>
        </button>
        <span class="text-sm text-stone-600 font-medium px-2">{{pagination.currentPage}} / {{pagination.totalPages}}</span>
        <button class="btn btn-outline px-4 py-2 {{#unless pagination.hasNext}}opacity-50 cursor-not-allowed{{/unless}}"
                {{#if pagination.hasNext}}onclick="changePage({{add pagination.currentPage 1}})"{{else}}disabled{{/if}}>
            <i class="fa-solid fa-chevron-right"></i>
        </button>
    </div>
</div>
