<!-- Register Owner Page - Modern Design with Icons Inside Inputs -->

<!-- Steps Indicator -->
<div class="flex items-center justify-center gap-3 mb-6">
    <div class="flex items-center gap-2" id="step1-indicator">
        <div class="w-8 h-8 rounded-full bg-primary-500 text-white flex items-center justify-center text-sm font-bold">1</div>
        <span class="text-sm font-medium text-stone-700">Nhà hàng</span>
    </div>
    <div class="w-8 h-px bg-stone-300"></div>
    <div class="flex items-center gap-2" id="step2-indicator">
        <div class="w-8 h-8 rounded-full bg-stone-200 text-stone-500 flex items-center justify-center text-sm font-bold step-number">2</div>
        <span class="text-sm font-medium text-stone-400 step-label">Tài khoản</span>
    </div>
</div>

<h2 class="text-2xl font-bold text-stone-900 text-center mb-1">Đăng ký nhà hàng mới</h2>
<p class="text-stone-500 text-center mb-6">Tạo tài khoản quản lý và đăng ký nhà hàng</p>

<form id="registerOwnerForm">
    <!-- Step 1: Restaurant Info -->
    <div id="step1" class="step-panel">
        <div class="flex items-center gap-2 mb-4">
            <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center">
                <i class="fa-solid fa-building text-primary-600"></i>
            </div>
            <h3 class="font-semibold text-stone-900">Thông tin nhà hàng</h3>
        </div>
        
        <div class="space-y-4">
            <div>
                <label for="restaurantName" class="block text-sm font-medium text-stone-700 mb-1.5">
                    Tên nhà hàng <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-utensils text-stone-400"></i>
                    </div>
                    <input type="text" class="w-full pl-11 pr-4 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                           id="restaurantName" name="restaurantName" 
                           placeholder="VD: Nhà hàng Phố Cổ" required>
                </div>
            </div>
            
            <div>
                <label for="address" class="block text-sm font-medium text-stone-700 mb-1.5">
                    Địa chỉ <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-location-dot text-stone-400"></i>
                    </div>
                    <input type="text" class="w-full pl-11 pr-4 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                           id="address" name="address" 
                           placeholder="VD: 123 Phố Huế, Hà Nội" required>
                </div>
            </div>
            
            <div>
                <label for="phone" class="block text-sm font-medium text-stone-700 mb-1.5">
                    Điện thoại <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-phone text-stone-400"></i>
                    </div>
                    <input type="tel" class="w-full pl-11 pr-4 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                           id="phone" name="phone" 
                           placeholder="VD: 024 1234 5678" required>
                </div>
            </div>
            
            <div>
                <label for="description" class="block text-sm font-medium text-stone-700 mb-1.5">Mô tả</label>
                <textarea class="w-full px-4 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                          id="description" name="description" rows="2"
                          placeholder="Mô tả ngắn về nhà hàng của bạn..."></textarea>
            </div>
        </div>
        
        <button type="button" class="w-full py-3 mt-6 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white font-semibold rounded-xl shadow-lg shadow-primary-500/30 transition-all flex items-center justify-center gap-2" onclick="goToStep(2)">
            Tiếp tục
            <i class="fa-solid fa-arrow-right"></i>
        </button>
    </div>

    <!-- Step 2: Account Info -->
    <div id="step2" class="step-panel hidden">
        <div class="flex items-center gap-2 mb-4">
            <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center">
                <i class="fa-solid fa-user text-primary-600"></i>
            </div>
            <h3 class="font-semibold text-stone-900">Thông tin tài khoản</h3>
        </div>
        
        <div class="space-y-4">
            <div>
                <label for="name" class="block text-sm font-medium text-stone-700 mb-1.5">
                    Họ và tên <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-user text-stone-400"></i>
                    </div>
                    <input type="text" class="w-full pl-11 pr-4 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                           id="name" name="name" 
                           placeholder="Nhập họ và tên" required>
                </div>
            </div>
            
            <div>
                <label for="email" class="block text-sm font-medium text-stone-700 mb-1.5">
                    Email <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-envelope text-stone-400"></i>
                    </div>
                    <input type="email" class="w-full pl-11 pr-4 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                           id="email" name="email" 
                           placeholder="example@email.com" required>
                </div>
            </div>
            
            <div>
                <label for="password" class="block text-sm font-medium text-stone-700 mb-1.5">
                    Mật khẩu <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-lock text-stone-400"></i>
                    </div>
                    <input type="password" class="w-full pl-11 pr-12 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                           id="password" name="password" 
                           placeholder="••••••••" required minlength="6">
                    <button type="button" class="absolute inset-y-0 right-0 pr-3.5 flex items-center text-stone-400 hover:text-stone-600"
                            onclick="togglePassword('password', 'eyeIcon1')"
                            tabindex="-1">
                        <i class="fa-solid fa-eye" id="eyeIcon1"></i>
                    </button>
                </div>
            </div>
            
            <div>
                <label for="confirmPassword" class="block text-sm font-medium text-stone-700 mb-1.5">
                    Nhập lại mật khẩu <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <i class="fa-solid fa-lock text-stone-400"></i>
                    </div>
                    <input type="password" class="w-full pl-11 pr-12 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                           id="confirmPassword" name="confirmPassword" 
                           placeholder="••••••••" required>
                    <button type="button" class="absolute inset-y-0 right-0 pr-3.5 flex items-center text-stone-400 hover:text-stone-600"
                            onclick="togglePassword('confirmPassword', 'eyeIcon2')"
                            tabindex="-1">
                        <i class="fa-solid fa-eye" id="eyeIcon2"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <div class="flex gap-3 mt-6">
            <button type="button" class="flex-1 py-3 bg-stone-100 hover:bg-stone-200 text-stone-700 font-semibold rounded-xl transition-all flex items-center justify-center gap-2" onclick="goToStep(1)">
                <i class="fa-solid fa-arrow-left"></i>
                Quay lại
            </button>
            <button type="submit" class="flex-[2] py-3 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white font-semibold rounded-xl shadow-lg shadow-primary-500/30 transition-all flex items-center justify-center gap-2">
                <i class="fa-solid fa-circle-check"></i>
                Đăng ký
            </button>
        </div>
    </div>
</form>

<div class="mt-6 text-center">
    <a href="/login" data-nav="/login" class="text-sm text-stone-500 hover:text-primary-600 transition-colors inline-flex items-center gap-1">
        <i class="fa-solid fa-arrow-left text-xs"></i>
        Quay lại đăng nhập
    </a>
</div>


