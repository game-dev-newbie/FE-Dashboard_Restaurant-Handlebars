<!-- Dashboard / Overview Page - Tailwind UI -->

<!-- Page Header -->
<div class="mb-6 flex items-center justify-between flex-wrap gap-4">
    <div>
        <h1 class="text-2xl font-bold text-stone-900">Tổng quan</h1>
        <p class="text-stone-500">Chào mừng trở lại! Đây là tình hình nhà hàng hôm nay.</p>
    </div>
    <!-- Date Time Clock Widget -->
    <div class="datetime-clock card p-4" id="datetimeClock">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
                <i class="fa-regular fa-clock text-primary-600"></i>
            </div>
            <div>
                <div class="text-xl font-bold text-stone-900" id="clockTime">--:--:--</div>
                <div class="text-sm text-stone-500" id="clockDate">-- / -- / ----</div>
            </div>
        </div>
    </div>
</div>

<!-- KPI Cards Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
    <!-- Bookings Today -->
    <div class="card kpi-card kpi-primary p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-stone-500 mb-1">Booking hôm nay</p>
                <p class="text-3xl font-bold text-stone-900">{{kpis.bookingsToday}}</p>
            </div>
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
                <i class="fa-solid fa-calendar-check"></i>
            </div>
        </div>
        <div class="mt-3 flex items-center text-sm">
            {{#if (gt kpis.bookingsTrend 0)}}
            <span class="text-green-600 flex items-center gap-1">
                <i class="fa-solid fa-arrow-trend-up"></i>
                +{{kpis.bookingsTrend}}%
            </span>
            {{else if (lt kpis.bookingsTrend 0)}}
            <span class="text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-arrow-trend-down"></i>
                {{kpis.bookingsTrend}}%
            </span>
            {{else}}
            <span class="text-stone-400 flex items-center gap-1">
                <i class="fa-solid fa-minus"></i>
                0%
            </span>
            {{/if}}
            <span class="text-stone-400 ml-2">so với hôm qua</span>
        </div>
    </div>
    
    <!-- Guests Today -->
    <div class="card kpi-card kpi-success p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-stone-500 mb-1">Khách dự kiến</p>
                <p class="text-3xl font-bold text-stone-900">{{kpis.guestsToday}}</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                <i class="fa-solid fa-users"></i>
            </div>
        </div>
        <div class="mt-3 flex items-center text-sm">
            {{#if (gt kpis.guestsTrend 0)}}
            <span class="text-green-600 flex items-center gap-1">
                <i class="fa-solid fa-arrow-trend-up"></i>
                +{{kpis.guestsTrend}}%
            </span>
            {{else if (lt kpis.guestsTrend 0)}}
            <span class="text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-arrow-trend-down"></i>
                {{kpis.guestsTrend}}%
            </span>
            {{else}}
            <span class="text-stone-400 flex items-center gap-1">
                <i class="fa-solid fa-minus"></i>
                0%
            </span>
            {{/if}}
            <span class="text-stone-400 ml-2">so với hôm qua</span>
        </div>
    </div>
    
    <!-- Pending Bookings -->
    <div class="card kpi-card kpi-warning p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-stone-500 mb-1">Chờ xác nhận</p>
                <p class="text-3xl font-bold text-stone-900">{{kpis.pendingBookings}}</p>
            </div>
            <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
                <i class="fa-solid fa-clock"></i>
            </div>
        </div>
        <div class="mt-3 text-sm text-orange-600">
            {{#if (gt kpis.pendingBookings 0)}}
            <span class="flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                Cần xử lý
            </span>
            {{else}}
            <span class="flex items-center gap-1 text-green-600">
                <i class="fa-solid fa-check-circle"></i>
                Đã xử lý hết
            </span>
            {{/if}}
        </div>
    </div>
    
    <!-- Table Occupancy -->
    <div class="card kpi-card kpi-info p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-stone-500 mb-1">Tỉ lệ lấp đầy</p>
                <p class="text-3xl font-bold text-stone-900">{{kpis.tableOccupancy}}%</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                <i class="fa-solid fa-circle"></i>
            </div>
        </div>
        <!-- Mini progress bar -->
        <div class="mt-3">
            <div class="h-2 bg-stone-200 rounded-full overflow-hidden">
                <div class="h-full bg-blue-500 rounded-full" style="width: {{kpis.tableOccupancy}}%"></div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="flex flex-wrap gap-3 mb-6">
    <a href="/bookings" class="btn btn-primary" data-nav="/bookings">
        <i class="fa-solid fa-circle"></i>
        Xem tất cả booking
    </a>
    <a href="/tables" class="btn btn-outline" data-nav="/tables">
        <i class="fa-solid fa-table-cells"></i>
        Quản lý bàn
    </a>
    <a href="/images" class="btn btn-outline" data-nav="/images">
        <i class="fa-solid fa-image"></i>
        Cập nhật hình ảnh
    </a>
</div>

<!-- Upcoming Bookings Table -->
<div class="card">
    <div class="flex items-center justify-between p-4 border-b border-stone-100">
        <h3 class="font-semibold text-stone-900 flex items-center gap-2">
            <i class="fa-regular fa-calendar"></i>
            Booking sắp tới
        </h3>
        <a href="/bookings" class="text-sm text-primary-600 hover:text-primary-700 font-medium" data-nav="/bookings">
            Xem tất cả →
        </a>
    </div>
    
    <div class="overflow-x-auto">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Thời gian</th>
                    <th>Khách hàng</th>
                    <th class="text-center">Số người</th>
                    <th class="text-center">Bàn</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-right">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                {{#each upcomingBookings}}
                <tr class="animate-fade-in" style="animation-delay: {{@index}}00ms">
                    <td>
                        <p class="font-bold text-stone-900">{{time}}</p>
                        <p class="text-sm text-stone-500">{{date}}</p>
                    </td>
                    <td>
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center text-primary-700 font-semibold">
                                {{substring customerName 0 1}}
                            </div>
                            <div>
                                <p class="font-medium text-stone-900">{{customerName}}</p>
                                <p class="text-sm text-stone-500">{{customerPhone}}</p>
                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <span class="inline-flex items-center gap-1 text-stone-600">
                            <i class="fa-solid fa-users text-xs"></i>
                            {{guests}}
                        </span>
                    </td>
                    <td class="text-center">
                        {{#if table}}
                        <span class="inline-flex items-center px-2.5 py-1 bg-stone-100 text-stone-700 rounded-lg text-sm font-bold">
                            {{table}}
                        </span>
                        {{else}}
                        <span class="text-stone-400">—</span>
                        {{/if}}
                    </td>
                    <td class="text-center">
                        {{#if (eq status 'PENDING')}}
                        <span class="badge badge-pending">Chờ xác nhận</span>
                        {{else if (eq status 'CONFIRMED')}}
                        <span class="badge badge-confirmed">Đã xác nhận</span>
                        {{else if (eq status 'CHECKED_IN')}}
                        <span class="badge badge-checked-in">Đã check-in</span>
                        {{else if (eq status 'CANCELLED')}}
                        <span class="badge badge-cancelled">Đã hủy</span>
                        {{else}}
                        <span class="badge badge-no-show">{{status}}</span>
                        {{/if}}
                    </td>
                    <td class="text-right">
                        <div class="flex items-center justify-end gap-2">
                            {{#if (eq status 'PENDING')}}
                            <button class="btn btn-sm btn-success" 
                                    data-action="confirmBooking" data-id="{{id}}">
                                <i class="fa-solid fa-check"></i>
                                <span>Xác nhận</span>
                            </button>
                            {{/if}}
                            <button class="btn btn-sm btn-secondary" 
                                    data-action="viewBooking" data-id="{{id}}">
                                <i class="fa-solid fa-eye"></i>
                                <span>Chi tiết</span>
                            </button>
                            <button class="btn btn-sm btn-outline text-red-500 hover:bg-red-50" 
                                    data-action="cancelBooking" data-id="{{id}}">
                                <i class="fa-solid fa-xmark"></i>
                                <span>Huỷ</span>
                            </button>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="6">
                        <div class="empty-state py-8">
                            <i class="fa-solid fa-inbox"></i>
                            <p class="text-stone-500">Không có booking sắp tới</p>
                            <a href="/bookings" class="btn btn-primary mt-4" data-nav="/bookings">
                                Xem tất cả booking
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
