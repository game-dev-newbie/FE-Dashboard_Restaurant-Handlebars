<!-- Login Page - Modern Design with Icons Inside Inputs -->

<h2 class="text-2xl font-bold text-stone-900 mb-1">Chào mừng trở lại!</h2>
<p class="text-stone-500 mb-6">Đăng nhập để quản lý nhà hàng của bạn</p>

<form id="loginForm" class="space-y-5">
    <!-- Email -->
    <div>
        <label for="email" class="block text-sm font-medium text-stone-700 mb-1.5">Email</label>
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                <i class="fa-solid fa-envelope text-stone-400"></i>
            </div>
            <input type="email" 
                   class="w-full pl-11 pr-4 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all" 
                   id="email" 
                   name="email" 
                   placeholder="example@restaurant.com" 
                   required>
        </div>
    </div>
    
    <!-- Password -->
    <div>
        <label for="password" class="block text-sm font-medium text-stone-700 mb-1.5">Mật khẩu</label>
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                <i class="fa-solid fa-lock text-stone-400"></i>
            </div>
            <input type="password" 
                   class="w-full pl-11 pr-12 py-3 bg-stone-50 border border-stone-200 rounded-xl text-sm placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all" 
                   id="password" 
                   name="password" 
                   placeholder="••••••••" 
                   required>
            <button type="button" 
                    class="absolute inset-y-0 right-0 pr-3.5 flex items-center text-stone-400 hover:text-stone-600 transition-colors"
                    onclick="togglePassword('password', 'eyeIcon')"
                    tabindex="-1">
                <i class="fa-solid fa-eye" id="eyeIcon"></i>
            </button>
        </div>
    </div>
    
    <!-- Remember & Forgot -->
    <div class="flex items-center justify-between">
        <label class="flex items-center gap-2.5 cursor-pointer">
            <input type="checkbox" 
                   id="rememberMe" 
                   name="rememberMe" 
                   class="w-4 h-4 rounded border-stone-300 text-primary-500 focus:ring-primary-500">
            <span class="text-sm text-stone-600">Ghi nhớ đăng nhập</span>
        </label>
        <a href="/forgot-password" data-nav="/forgot-password" class="text-sm text-primary-600 hover:text-primary-700 font-medium">
            Quên mật khẩu?
        </a>
    </div>
    
    <!-- Submit Button -->
    <button type="submit" class="w-full py-3 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white font-semibold rounded-xl shadow-lg shadow-primary-500/30 hover:shadow-primary-600/40 transition-all flex items-center justify-center gap-2">
        Đăng nhập
        <i class="fa-solid fa-arrow-right"></i>
    </button>
</form>

<!-- Divider -->
<div class="relative my-6">
    <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-stone-200"></div>
    </div>
    <div class="relative flex justify-center">
        <span class="bg-white px-4 text-sm text-stone-400">Chưa có tài khoản?</span>
    </div>
</div>

<!-- Register Links -->
<div class="space-y-3">
    <a href="/register-owner" 
       data-nav="/register-owner" 
       class="flex items-center gap-4 p-3.5 border border-stone-200 rounded-xl hover:border-primary-300 hover:bg-primary-50/50 transition-all group">
        <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-200 transition-colors">
            <i class="fa-solid fa-building text-primary-600"></i>
        </div>
        <div class="flex-1">
            <p class="font-medium text-stone-900 text-sm">Đăng ký nhà hàng mới</p>
            <p class="text-xs text-stone-500">Bắt đầu quản lý nhà hàng của bạn</p>
        </div>
        <i class="fa-solid fa-chevron-right text-stone-400 text-sm"></i>
    </a>
    
    <a href="/register-staff" 
       data-nav="/register-staff" 
       class="flex items-center gap-4 p-3.5 border border-stone-200 rounded-xl hover:border-green-300 hover:bg-green-50/50 transition-all group">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
            <i class="fa-solid fa-user-plus text-green-600"></i>
        </div>
        <div class="flex-1">
            <p class="font-medium text-stone-900 text-sm">Đăng ký nhân viên</p>
            <p class="text-xs text-stone-500">Tham gia vào nhà hàng có sẵn</p>
        </div>
        <i class="fa-solid fa-chevron-right text-stone-400 text-sm"></i>
    </a>
</div>


