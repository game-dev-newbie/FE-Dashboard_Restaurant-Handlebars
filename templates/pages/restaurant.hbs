<!-- Restaurant Info Page - Tailwind UI -->

<!-- Page Header -->
<div class="mb-6">
    <h1 class="text-2xl font-bold text-stone-900">Thông tin nhà hàng</h1>
    <p class="text-stone-500">Cập nhật thông tin hiển thị cho khách hàng</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Form -->
    <div class="lg:col-span-2 card p-6">
        <h3 class="text-lg font-semibold text-stone-900 mb-6 flex items-center gap-2">
            <i class="fa-solid fa-building"></i>
            Thông tin cơ bản
        </h3>
        
        <form id="restaurantInfoForm">
            <div class="form-group">
                <label for="restaurantName" class="form-label">
                    Tên nhà hàng <span class="text-red-500">*</span>
                </label>
                <input type="text" class="form-input" id="restaurantName" name="name" 
                       value="{{name}}" required>
            </div>
            
            <div class="form-group">
                <label for="address" class="form-label">
                    Địa chỉ <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fa-solid fa-location-dot text-stone-400"></i>
                    </div>
                    <input type="text" class="form-input pl-10" id="address" name="address" 
                           value="{{address}}" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="phone" class="form-label">
                    Điện thoại <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fa-solid fa-phone text-stone-400"></i>
                    </div>
                    <input type="tel" class="form-input pl-10" id="phone" name="phone" 
                           value="{{phone}}" required>
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="form-group mb-0">
                    <label for="openTime" class="form-label">
                        Giờ mở cửa <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-clock text-stone-400"></i>
                        </div>
                        <input type="time" class="form-input pl-10" id="openTime" name="open_time" 
                               value="{{open_time}}" required>
                    </div>
                </div>
                
                <div class="form-group mb-0">
                    <label for="closeTime" class="form-label">
                        Giờ đóng cửa <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-clock text-stone-400"></i>
                        </div>
                        <input type="time" class="form-input pl-10" id="closeTime" name="close_time" 
                               value="{{close_time}}" required>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label for="description" class="form-label">Mô tả</label>
                <textarea class="form-input" id="description" name="description" 
                          rows="4" placeholder="Giới thiệu ngắn về nhà hàng...">{{description}}</textarea>
            </div>
            
            <div class="form-group">
                <label class="form-label">Tags</label>
                <div class="flex flex-wrap gap-2 mb-2" id="tagsContainer">
                    {{#each tags}}
                    <span class="inline-flex items-center gap-1 px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm">
                        {{this}}
                        <button type="button" class="hover:text-primary-900" data-tag="{{this}}" onclick="removeTag(this)">
                            ×
                        </button>
                    </span>
                    {{/each}}
                </div>
                <input type="text" class="form-input" id="tagInput" placeholder="Nhập tag và nhấn Enter">
                <input type="hidden" id="tagsValue" name="tags" value="{{join tags ','}}">
                <p class="text-xs text-stone-400 mt-1">Nhấn Enter để thêm tag</p>
            </div>
            
            <hr class="my-6 border-stone-200">
            
            <h4 class="font-semibold text-stone-900 mb-4">Cài đặt cọc</h4>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                <div class="flex items-center gap-3 p-4 bg-stone-50 rounded-xl">
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" id="requireDeposit" name="requireDeposit" 
                               class="sr-only peer" {{#if requireDeposit}}checked{{/if}}>
                        <div class="w-11 h-6 bg-stone-300 rounded-full peer peer-checked:bg-primary-500 peer-focus:ring-4 peer-focus:ring-primary-100 transition-colors"></div>
                        <div class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full peer-checked:translate-x-5 transition-transform"></div>
                    </label>
                    <span class="text-sm text-stone-700">Yêu cầu cọc khi đặt bàn</span>
                </div>
                
                <div class="form-group mb-0">
                    <label for="defaultDeposit" class="form-label">Số tiền cọc mặc định</label>
                    <div class="relative">
                        <input type="number" class="form-input pr-16" id="defaultDeposit" 
                               name="defaultDeposit" value="{{defaultDeposit}}" min="0" step="10000">
                        <span class="absolute right-3 top-1/2 -translate-y-1/2 text-sm text-stone-400">VNĐ</span>
                    </div>
                </div>
            </div>
            
            <div class="flex gap-3">
                <button type="button" class="btn btn-primary" id="showConfirmUpdateBtn">
                    <i class="fa-solid fa-check"></i>
                    Lưu thay đổi
                </button>
                <button type="reset" class="btn btn-secondary">Huỷ</button>
            </div>
        </form>
    </div>
    
    <!-- Sidebar Info -->
    <div class="space-y-4">
        <!-- Stats Card -->
        <div class="card p-5">
            <h4 class="font-semibold text-stone-900 mb-4 flex items-center gap-2">
                <i class="fa-solid fa-chart-column"></i>
                Thống kê
            </h4>
            <div class="space-y-3">
                <div class="flex justify-between items-center">
                    <span class="text-stone-500">Đánh giá TB</span>
                    <span class="font-semibold text-yellow-600 flex items-center gap-1">
                        <i class="fa-solid fa-star"></i>
                        {{averageRating}}
                    </span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-stone-500">Tổng đánh giá</span>
                    <span class="font-semibold text-stone-900">{{reviewCount}}</span>
                </div>
            </div>
        </div>
        
        <!-- Info Card -->
        <div class="card p-5 bg-blue-50 border border-blue-200">
            <div class="flex gap-3">
                <i class="fa-solid fa-circle-info"></i>
                <div>
                    <p class="text-sm font-medium text-blue-800">Lưu ý</p>
                    <p class="text-sm text-blue-700 mt-1">
                        Thông tin cập nhật sẽ hiển thị ngay trên miniapp Zalo cho khách hàng.
                    </p>
                </div>
            </div>
        </div>
        
        <!-- Restaurant ID -->
        <div class="card p-5">
            <p class="text-sm text-stone-500">ID nhà hàng</p>
            <p class="font-mono text-stone-700">{{id}}</p>
        </div>

        <!-- Invite Code -->
        <div class="card p-5">
            <p class="text-sm text-stone-500 mb-1">Mã mời nhân viên</p>
            <div class="flex items-center gap-2">
                <p class="font-mono font-bold text-lg text-primary-600 tracking-wider">{{invite_code}}</p>
                <button onclick="navigator.clipboard.writeText('{{invite_code}}').then(() => alert('Đã sao chép mã mời!'))" 
                        class="p-1.5 text-stone-400 hover:text-primary-600 transition-colors"
                        title="Sao chép">
                    <i class="fa-regular fa-copy"></i>
                </button>
            </div>
            <p class="text-xs text-stone-400 mt-2">Dùng mã này để nhân viên đăng ký tài khoản.</p>
        </div>
    </div>
</div>

<!-- Confirm Update Modal -->
<div id="confirmUpdateModal" class="hidden">
    <div class="modal-backdrop" onclick="closeModal('confirmUpdateModal')"></div>
    <div class="modal">
        <div class="modal-header">
            <h5 class="modal-title">Xác nhận cập nhật</h5>
            <button class="modal-close" onclick="closeModal('confirmUpdateModal')">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <i class="fa-solid fa-triangle-exclamation text-amber-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-stone-900 font-medium">Bạn có chắc muốn cập nhật thông tin nhà hàng?</p>
                    <p class="text-sm text-stone-500 mt-1">
                        Thông tin mới sẽ được hiển thị ngay cho khách hàng trên ứng dụng.
                    </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('confirmUpdateModal')">Huỷ</button>
            <button class="btn btn-primary" id="confirmUpdateBtn">
                <i class="fa-solid fa-check"></i>
                Xác nhận cập nhật
            </button>
        </div>
    </div>
</div>

